<tr>
  <td class="btn-group-xs">
    {# TODO: Make this pretty for row actions (add tax, add item before, add item after...) #}
    <a class="btn btn-default btn-xs" title="{% trans %}Remove{% endtrans %}" href="#" onclick="jQuery(this).parents('tr').remove();return false;"><span class="glyphicon glyphicon-trash"></span></a>
  </td>
  <td>
    {{ form_widget(form.description) }}
    {{ form_errors(form.description) }}
  </td>
  <td class="cell-align-right">
    {{ form_widget(form.quantity) }}
    {{ form_errors(form.quantity) }}
  </td>
  <td class="cell-align-right">
    {{ form_widget(form.unitary_cost) }}
    {{ form_errors(form.unitary_cost) }}
  </td>
  <td class="cell-align-right">
    {{ form_widget(form.discount) }}
    {{ form_errors(form.discount) }}
  </td>
  <td class="taxes form-inline">
    {{ form_widget(form.taxes) }}
    {{ form_errors(form.taxes) }}
  </td>
  <td class="cell-align-right">
    {{ entity.grossAmount|localizedcurrency(currency) }}
  </td>
</tr>
{{ form_widget(form) }}
