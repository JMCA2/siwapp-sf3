{{ form_start(list_form) }}
<ul id="toolbar" class="table-actions list-inline list-unstyled">
  <li>
    <button type="submit" name="delete" class="btn btn-default btn-danger" title="{% trans %}Remove selected{% endtrans %}"><span class="glyphicon glyphicon-trash"></span></button>
  </li>
  <li>
    <button type="submit" name="print" class="btn btn-default" title="{% trans %}Print selected{% endtrans %}"><span class="glyphicon glyphicon-print"></span></button>
  </li>
  <li>
    <button type="submit" name="pdf" class="btn btn-default" title="{% trans %}Download as PDF{% endtrans %}"><span class="glyphicon glyphicon-download-alt"></span></button>
  </li>
  <li>
    <button type="submit" name="email" class="btn btn-default" title="{% trans %}Email selected{% endtrans %}"><span class="glyphicon glyphicon-envelope"></span></button>
  </li>
</ul>
<table class="table table-condensed table-striped align-middle" data-type="estimates">
  <thead>
    <tr>
      <th class="cell-size-tiny cell-align-center">
        <input type="checkbox" name="all" />
      </th>
      <th class="cell-size-medium">
        {{ knp_pagination_sortable(estimates, 'Series'|trans, 'e.serie') }}
      </th>
      <th>
        {{ knp_pagination_sortable(estimates, 'Customer'|trans, 'e.customer_name') }}
      </th>
      <th class="cell-size-medium">
        {{ knp_pagination_sortable(estimates, 'Date'|trans, 'e.issue_date') }}
      </th>
      <th class="cell-size-small-medium cell-align-center">
        {{ knp_pagination_sortable(estimates, 'Status'|trans, 'e.status') }}
      </th>
      <th class="cell-size-medium cell-align-right">
        {{ knp_pagination_sortable(estimates, 'Total'|trans, 'e.gross_amount') }}
      </th>
    </tr>
  </thead>
  <tbody>
    {% if estimates|length == 0 %}
      <tr>
        <td colspan="7">{% trans %}No estimates found.{% endtrans %}</td>
      </tr>
    {% endif %}
    {% for key, entity in estimates %}
      <tr data-link="{{ path('estimate_show', { 'id': entity.id }) }}">
        <td class="table-action cell-align-center no-link">
          {{ form_row(list_form.estimates[key]) }}
        </td>
        <td class="cell-size-medium cell-align-center">{{ entity.serie.getName() }}</td>
        <td>{{ entity.getCustomerName }}</td>
        <td>{{ entity.issueDate|localizeddate('short', 'none') }}</td>
        <td class="cell-align-center">
          <span class="label {{ entity.statusString }}">{% trans with { '%status%': entity.statusString } %}%status%{% endtrans %}</span>
        </td>
        <td class="cell-align-right">{{ entity.grossAmount|localizedcurrency(currency) }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{{ form_end(list_form) }}
<div class="navigation">
    {{ knp_pagination_render(estimates) }}
</div>
