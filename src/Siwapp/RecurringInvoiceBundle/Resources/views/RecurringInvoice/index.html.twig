{% extends "SiwappCoreBundle::base.html.twig" %}

{% block actionlink %}
<a href="{{ path('recurring_add') }}" class="btn btn-default btn-primary">
  <span class="glyphicon glyphicon-plus"></span>
  {% trans %}New Recurring Invoice{% endtrans %}
</a>
{% endblock %}

{% block searchform %}
  {% include "SiwappRecurringInvoiceBundle:RecurringInvoice:search.html.twig" with {'form': search_form} %}
{% endblock %}

{% block body %}
  <div class="row"><div class="col-md-6">
    <table id="recurring-summary" class="table table-bordered table-condensed col-md-2">
      <thead>
        <tr>
          <th colspan="4">Average turnover</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><strong>{{ expected|localizedcurrency(currency) }}</strong> /day</td>
          <td><strong>{{ (expected*7)|localizedcurrency(currency) }}</strong> /week</td>
          <td><strong>{{ (expected*30)|localizedcurrency(currency) }}</strong> /month</td>
          <td><strong>{{ (expected*365)|localizedcurrency(currency) }}</strong> /year</td>
        </tr>
      </tbody>
    </table>
  </div></div>
  <div id="invoices-latest-recurring-invoices">
    {% include "SiwappRecurringInvoiceBundle:RecurringInvoice:list.html.twig" with {'list_form': list_form} %}
  </div>
  <div class="float-right">
    <form action="{{ path('recurring_generate_pending') }}" method="post">
      <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-cog"></span> Generate all pending invoices now</button>
    </form>
  </div>
{% endblock %}
