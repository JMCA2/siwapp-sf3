{% set is_expanded = form.vars.value and (form.vars.value.customer is not null or form.vars.value.serie is not null or form.vars.value.status is not null) %}

{{ form_start(form, {'attr': {'class': 'search form-inline'}}) }}

  <fieldset>

    {{ form_row(form.terms) }}
    {{ form_row(form.date_from) }}
    {{ form_row(form.date_to) }}

    <div class="form-group float-right btn-toolbar">
      <div class="btn-group">
        <button id="search-submit" type="submit" class="btn btn-default btn-primary">{% trans %}Search{% endtrans %}
        <button id="search-advanced" type="button" data-toggle="button" class="btn btn-default{% if is_expanded %} active{% endif %}">
          {% trans %}Advanced{% endtrans %}
        <span class="caret"></span>
        </button></button>
      </div>
      <div class="btn-group">
        <button id="search-reset" type="reset" class="btn btn-default btn-warning">{% trans %}Reset{% endtrans %}</button>
      </div>
    </div>

  </fieldset>

  <fieldset id="search-secondary"{% if not is_expanded %} style="display:none;"{% endif %}>
      {{ form_row(form.status) }}
      {{ form_row(form.customer) }}
      {{ form_row(form.serie) }}
  </fieldset>

{{ form_end(form) }}
