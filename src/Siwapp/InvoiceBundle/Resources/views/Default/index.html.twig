{% extends "::base.html.twig" %}

{% block searchform %}
  {% include "SiwappInvoiceBundle:Default:search.html.twig" %}
{% endblock %}

{% block body %}
  
  <h1>Invoices</h1>
  
  <p>
    <button class="btn primary icon share alternative">Share this invoice!</button>
  </p>
  
  <p>
    <input id="datepicker" />
    <script type="text/javascript">
    jQuery(function($){
      $('#datepicker').kendoDatePicker();
    });
    </script>
  </p>
  
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {% javascripts
    'js/bundle/invoice-payments.js'
    filter='yui_js'
    output='js/min/invoice-list.js'
  %}
  <script type="text/javascript" charset="utf-8" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}